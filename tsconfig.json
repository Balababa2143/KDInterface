{
    "compilerOptions": {
        "strict": true,
        "alwaysStrict": true,
        "strictBindCallApply": true,
        "outDir": "Build",
        "sourceMap": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "DOM",
            "ESNext",
            "ESNext.Array"
        ],
        "skipLibCheck": true
    },
    "include": [
        "Src/**/*"
    ]
}