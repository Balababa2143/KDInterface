{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ES2022",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "checkJs": true,
      "strict": true,
      "alwaysStrict": true,
      "strictBindCallApply": true,
      "outDir": "build",
      "declarationDir": "include",
      "declaration": true,
      "sourceMap": true,
      "lib": [
        "DOM",
        "DOM.Iterable",
        "ES2022"
      ]
    },
    "include": [
      "src/**/*"
    ],
}